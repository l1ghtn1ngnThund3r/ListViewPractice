<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_custom"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/text_view_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_custom"
        android:layout_toEndOf="@id/image_view_custom"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="PH"
        />
    <TextView
        android:id="@+id/sub_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_custom"
        android:layout_toRightOf="@id/image_view_custom"
        android:layout_marginTop="4dp"
        android:text="PH"
        android:textSize="12sp"
        />

</RelativeLayout>